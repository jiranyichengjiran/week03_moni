<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gou_wu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAcc"
        android:gravity="center"
        android:text="购物车"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/car_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gou_wu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/all_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="全/不选"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/all_check"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/all_check"
            android:text="总价:XXXX.00"
            android:textColor="#f00"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#f00"
            android:gravity="center"
            android:text="数量(num)" />
    </RelativeLayout>
</RelativeLayout>
