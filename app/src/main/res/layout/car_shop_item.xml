<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <CheckBox
        android:id="@+id/shop_check_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/car_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shop_check_all"
        android:background="@color/colorShop"
        android:gravity="center"
        android:text="car_shop"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/car_cycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_check_all" />
</RelativeLayout>
