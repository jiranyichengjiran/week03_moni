<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/quan_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/quan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/quan_img"
        android:padding="10dp"
        android:text="name" />

    <TextView
        android:id="@+id/quan_xiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quan_img"
        android:text="xiang" />

    <ImageView
        android:id="@+id/quan_img1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/quan_xiang"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/quan_img2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/quan_xiang"
        android:layout_toRightOf="@id/quan_img1"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />
</RelativeLayout>
